    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload"
            ],
            "jinja": true
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Open index.html",
            "file": "${workspaceFolder}/templates/index.html"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Open index.html",
            "file": "${workspaceFolder}\\templates\\index.html"
        },
        {
            "name": "Attach to Chrome",
            "port": 9222,
            "request": "attach",
            "type": "chrome",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Open index.html",
            "file": "c:\\Users\\risun\\movie_rating_app\\templates\\index.html"
        }
    ]
}